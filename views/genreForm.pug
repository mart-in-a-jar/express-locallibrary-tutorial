extends layout 

block content 

    h1= title

    //- blank action means same url
    form(method="POST" action="")
        div.form-group
            label(for="name") Genre: 
            input#name.form-control(type="text" placeholder="Fantasy, Poetry etc." name="name" 
            value= genre ? genre.name : "" tabindex=1 required)
        button.btn.btn-primary(type="submit" tabindex=2) Submit

        if errors 
            ul 
                for error in errors 
                    li!= error.msg